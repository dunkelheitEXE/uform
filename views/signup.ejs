<form class="mb-3 mx-auto" style="max-width: 60%;" method="post" action="/signup">
    <legend>Sign up</legend>
    <div class="mb-3">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input
                type="text"
                class="form-control"
                name="name"
                id="name"
                placeholder="Your name"
            />
        </div>
        
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
            type="email"
            class="form-control"
            name="email"
            id="email"
            aria-describedby="emailHelpId"
            placeholder="abc@mail.com"
        />
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">password</label>
        <input
            type="password"
            class="form-control"
            name="password"
            id="password"
            aria-describedby="emailHelpId"
            placeholder="123"
        />
        <small id="passwordHelp" class="form-text text-muted"
            >Your password is hashed for your security</small
        >
    </div>
    <button
        type="submit"
        class="btn btn-success"
    >
        Submit
    </button>
    
</form>

<script src="js/bootstrap.min.js"></script>